<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Sales Productivity Tracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="SalesProductivityTracker">
    <div class="navbar navbar-inverse navbar-fixed-top" ng-controller="navController">
        <div class="navbar-header navbar-brand">
            <a ng-click="showHome()" class="pointer">Sales Productivity Tracker</a>
        </div>
        <ul class="nav nav-pills">
            <li><a ng-click="showLogin()" class="pointer">Login</a></li>
            <li><a ng-click="showProductivityForm()" class="pointer">Enter Productivity</a></li>
            <li><a ng-click="showPTORequestForm()" class="pointer">Request PTO</a></li>
        </ul>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
</body>
</html>
